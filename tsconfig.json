{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    // "module": "es6",
    "target": "es5",
    "module": "esnext",
    "jsx": "react-jsx",
    "allowJs": true,
    "baseUrl": ".",
    "paths": { "*": ["./src/*"] },
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": ["./config/jest/setupTest.ts", "./src/**/*.ts", "./src/**/*.tsx"]
}
